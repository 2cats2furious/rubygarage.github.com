<section id="hide-delegate-after" class="slide">
  <h3>Hide Delegate</h3>
  <script type="syntaxhighlighter" class="brush: ruby">
    class Client
      attr_reader :clerk

      def initialize clerk
        @clerk = clerk
      end
    end

    class Clerk
      attr_reader :department

      def initialize (department)
        @department = department
      end

      def manager
        department.manager
      end
    end

    class Manager
      attr_accessor :department
    end

    class Department
      attr_reader :manager
      def initialize manager
        @manager = manager
        manager.department = self
      end
    end
  </script>
</section>